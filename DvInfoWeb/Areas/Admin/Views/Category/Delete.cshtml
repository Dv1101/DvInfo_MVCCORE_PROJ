@model Category

<form method="post">
    <div class="container">
        <div class="row pt-4">
            <div class="col-6">
                <h1>Delete Category</h1>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi bi-backspace"></i> Back to Category
                </a>
            </div>
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row mt-2">
            <div class="col-12">
                <div class="">
                    <div class="mb-2">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" disabled class="form-control" />
                       
                    </div>
                </div>
                <div class="">
                    <div class="mb-2">
                        <label asp-for="DisplayOrder"></label>
                        <input asp-for="DisplayOrder"  disabled class="form-control" />
                 
                    </div>
                </div>
                <button type="submit" class="btn btn-danger" style="width:150px;"><i class="bi bi-database-add"></i>&nbsp;Delete</button>
            </div>
        </div>

    </div>




</form>






