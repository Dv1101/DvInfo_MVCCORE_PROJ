@model Category

<form method="post">
    <div class="container">
        <div class="row pt-4">
            <div class="col-6">
                <h1>Edit Category</h1>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi bi-backspace"></i> Back to Category
                </a>
            </div>
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row mt-2">
            <div class="col-12">
                <div class="">
                    <div class="mb-2">
                        <input asp-for="CategoryId" hidden />
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="">
                    <div class="mb-2">
                        <label asp-for="DisplayOrder"></label>
                        <input asp-for="DisplayOrder" class="form-control" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary" style="width:150px;"><i class="bi bi-database-add"></i>&nbsp;Update</button>
            </div>
        </div>

    </div>




</form>

<!--CLIENT SIDE VALIDATION USING JQUERY-->
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}



